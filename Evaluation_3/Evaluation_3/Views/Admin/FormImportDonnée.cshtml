@{
    Layout = "_AdminLayout";
}

<style>
    body {
        background-color: #1e1e1e;
        color: #cfcfcf;
        font-family: Arial, sans-serif;
    }
    .import-form {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #2c2c2c;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    .import-form h1 {
        text-align: center;
        color: #f0f0f0;
        margin-bottom: 20px;
    }
    .import-form label {
        display: block;
        margin-bottom: 8px;
        color: #a8a8a8;
    }
    .import-form input[type="file"] {
        display: none;
    }
    .import-form label[for="commissions"]::after,
    .import-form label[for="biens"]::after,
    .import-form label[for="locations"]::after {
        content: 'Sélectionner un fichier...';
        display: inline-block;
        width: calc(100% - 20px);
        padding: 10px;
        background-color: #3c3c3c;
        color: #fff;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .import-form label[for="commissions"]:hover::after,
    .import-form label[for="biens"]:hover::after,
    .import-form label[for="locations"]:hover::after {
        background-color: #5c5c5c;
    }
    .import-form button {
        display: block;
        width: 50%;
        padding: 10px;
        margin: 20px auto;
        background-color: #4caf50;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .import-form button:hover {
        background-color: #45a049;
    }
    .import-form div {
        margin-bottom: 15px;
    }
</style>

<div class="import-form">
  <h1>Importation de données</h1>
  <form asp-controller="Admin" asp-action="InsertionDonnee" method="post" enctype="multipart/form-data">
    <div>
      <label for="commissions">Fichier des Commissions</label>
      <input type="file" id="commissions" name="commissions" required>
      <span id="commissions-filename">Sélectionner un fichier...</span>
    </div>
    <div>
      <label for="biens">Fichier des Biens</label>
      <input type="file" id="biens" name="biens" required>
      <span id="biens-filename">Sélectionner un fichier...</span>
    </div>
    <div>
      <label for="locations">Fichier des Locations</label>
      <input type="file" id="locations" name="locations" required>
      <span id="locations-filename">Sélectionner un fichier...</span>
    </div>
    <div>
      <button type="submit">Importer</button>
    </div>
  </form>
</div>

@section Scripts {
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var commissionsInput = document.getElementById('commissions');
      var biensInput = document.getElementById('biens');
      var locationsInput = document.getElementById('locations');

      if (commissionsInput) {
        commissionsInput.addEventListener('change', function () {
          var fileName = this.files[0].name;
          document.getElementById('commissions-filename').innerText = fileName;
        });
      }

      if (biensInput) {
        biensInput.addEventListener('change', function () {
          var fileName = this.files[0].name;
          document.getElementById('biens-filename').innerText = fileName;
        });
      }

      if (locationsInput) {
        locationsInput.addEventListener('change', function () {
          var fileName = this.files[0].name;
          document.getElementById('locations-filename').innerText = fileName;
        });
      }
    });
  </script>
}

