@{
    Layout = null;
    ViewBag.Title = "Login Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
        }
        .login-wrapper {
            min-height: 100vh;
        }
        .login-container {
            max-width: 800px;
        }
        .img-container img {
            object-fit: cover;
            height: 100%;
        }
        .bg-dark {
            background-color: #1e1e1e !important;
        }
        .text-light {
            color: #e0e0e0 !important;
        }
        .form-control {
            background-color: #333;
            border-color: #444;
            color: #e0e0e0;
        }
        .form-control:focus {
            background-color: #444;
            border-color: #666;
            color: #fff;
        }
        .btn-primary {
            background-color: #6200ea;
            border-color: #6200ea;
        }
        .btn-primary:hover {
            background-color: #3700b3;
            border-color: #3700b3;
        }
    </style>
</head>
<body>

    <div class="container-fluid login-wrapper d-flex align-items-center justify-content-center">
        <div class="row login-container shadow-lg rounded overflow-hidden">
            <!-- Login Form -->
            <div class="col-md-6 p-4 d-flex flex-column justify-content-center bg-dark">
                <h2 class="text-center mb-4 text-light">Admin Login</h2>
                <form asp-controller="Admin" asp-action="checkLogin" method="post">
                    <div class="form-group">
                        <label for="login" class="form-label text-light">Login</label>
                        <input type="text" class="form-control" id="login" name="login" value="admin@gmail.com" required>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label text-light">Password</label>
                        <input type="password" class="form-control" id="password" name="password" value="admin" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
                </form>
            </div>
            <div class="col-md-6 p-0 img-container">
                <img src="~/img/admin_illustration (2).jfif" alt="Admin Illustration" class="img-fluid">
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>
