@model int
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Sélectionnez l'intervalle de chiffre d'affaires et des gains";
    var idproprietaire = Model;
}

<style>
    body {
        background-color: #1e1e1e;
        color: #cfcfcf;
        font-family: Arial, sans-serif;
    }
    .import-form {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #2c2c2c;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    .import-form h2 {
        text-align: center;
        color: #f0f0f0;
        margin-bottom: 20px;
    }
    .import-form label {
        display: block;
        margin-bottom: 8px;
        color: #a8a8a8;
    }
    .forme input {
        background-color: #495057;
        color: white;
        border: 1px solid #6c757d;
        width: calc(100% - 10px); /* Adjusted width for better appearance */
    }
    .forme label {
        color: #ced4da;
    }
    .forme input:focus {
        background-color: #495057;
        color: white;
        border: 1px solid #adb5bd;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .btn-sm-custom {
        padding: .25rem .5rem;
        font-size: .875rem;
        line-height: 1.5;
        border-radius: .2rem;
    }
    .btn-primary {
        background-color: #4caf50;
        border-color: #4caf50;
        margin-left: auto;
        margin-right: auto;
        display: block;
    }
    .btn-primary:hover {
        background-color: #45a049;
        border-color: #45a049;
    }
</style>

<div class="import-form vh-75 mt-5-custom">
    <div class="w-100">
        <h2>@ViewData["Title"]</h2>
        <form asp-controller="Admin" asp-action="ChiffreAffaireGain" method="post" class="forme">
            <div class="form-group mt-3">
                <label for="startDate">Date de début</label>
                <input type="date" class="form-control w-100" id="startDate" name="startDate" required>
            </div>
            <div class="form-group mt-3">
                <label for="endDate">Date de fin</label>
                <input type="date" class="form-control w-100" id="endDate" name="endDate" required>
            </div>
            <button type="submit" class="btn btn-primary btn-sm-custom mt-3 w-75">Soumettre</button>
        </form>
    </div>
</div>
