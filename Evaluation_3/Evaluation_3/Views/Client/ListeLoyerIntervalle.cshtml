@model int
@{
    Layout = "_ClientLayout";
    ViewData["Title"] = "Sélectionnez l'intervalle de Loyer";
    var idclient = Model;
}

<style>
    .vh-75 {
        min-height: 75vh;
    }
    .mt-5-custom {
        margin-top: 3rem;
    }
    .btn-sm-custom {
        padding: .25rem .5rem;
        font-size: .875rem;
        line-height: 1.5;
        border-radius: .2rem;
    }
</style>

<div class="d-flex justify-content-center align-items-start vh-75 mt-5-custom">
    <div class="w-50">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <form asp-controller="Client" asp-action="ListeLoyer" method="post">
            <input type="hidden" name="idclient" value="@idclient" />
            <div class="form-group mt-3">
                <label for="startDate">Date de début</label>
                <input type="date" class="form-control w-100" id="startDate" name="startDate" required>
            </div>
            <div class="form-group mt-3">
                <label for="endDate">Date de fin</label>
                <input type="date" class="form-control w-100" id="endDate" name="endDate" required>
            </div>
            <button type="submit" class="btn-success btn-primary btn-sm-custom mt-3 w-30">Soumettre</button>
        </form>
    </div>
</div>
